<% was_validated = style.errors.any? %>

<%= form_with(model: style, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% style_name_class = "form-control" %>
    <% style_name_was_invalid = style.errors.include?(:style_name) %>

    <% if was_validated %>
      <% if style_name_was_invalid %>
        <% style_name_class << " is-invalid" %>
      <% else %>
        <% style_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :style_name %>
    <%= f.text_field :style_name, class: style_name_class, placeholder: "Enter style name" %>
    <% if style_name_was_invalid %>
      <% style.errors.full_messages_for(:style_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = style.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <% if image_was_invalid %>
      <% style.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
