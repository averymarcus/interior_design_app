<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rooms

    <a data-toggle="collapse" href="#style_rooms_new_form">
      Add room
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @style.rooms.each do |room| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to room, room %>

        <%= link_to room, method: :delete, data: { confirm: "Do you really want to delete this room" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="style_rooms_new_form">
        <%= render partial: "styles/style_rooms_new_form" %>
      </div>
    </div>

  </ul>
</div>
