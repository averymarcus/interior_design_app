<% was_validated = like.errors.any? %>

<%= form_with(model: like, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = like.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% like.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <!-- Label and input for furniture_id start -->
  <div class="form-group">
    <% furniture_class = "form-control" %>
    <% furniture_was_invalid = like.errors.include?(:furniture) %>

    <% if was_validated %>
      <% if furniture_was_invalid %>
        <% furniture_class << " is-invalid" %>
      <% else %>
        <% furniture_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :furniture_id %>
    <!-- Input for furniture_id start -->
    <%= f.number_field :furniture_id, class: furniture_class, placeholder: "Enter furniture" %>
    <!-- Input for furniture_id end -->
    <% if furniture_was_invalid %>
      <% like.errors.full_messages_for(:furniture).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for furniture_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
