<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Furniture Items

    <a data-toggle="collapse" href="#room_furniture_items_new_form">
      Add furniture
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @room.furniture_items.each do |furniture| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to furniture, furniture %>

        <%= link_to furniture, method: :delete, data: { confirm: "Do you really want to delete this furniture" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="room_furniture_items_new_form">
        <%= render partial: "rooms/room_furniture_items_new_form" %>
      </div>
    </div>

  </ul>
</div>
