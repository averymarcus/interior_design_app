<%= form_with(model: @furniture, local: true) do |f| %>

  <%= f.hidden_field :room_id, value: @room.id %>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :furniture_name %>

    <%= f.text_field :furniture_name, class: "form-control" %>
  </div>

  <%= f.submit "Create furniture", class: "btn btn-block btn-outline-secondary" %>
<% end %>
