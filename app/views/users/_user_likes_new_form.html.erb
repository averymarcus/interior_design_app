<!-- Form like start -->
<%= form_with(model: @like, local: true) do |f| %>
<!-- Form like end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for furniture_id start -->
  <div class="form-group">
    <%= f.label :furniture_id %>

    <!-- Input for furniture_id start -->
    <%= f.collection_select :furniture_id, Furniture.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for furniture_id end -->
  </div>
  <!-- Label and input for furniture_id end -->

  <%= f.submit "Create like", class: "btn btn-block btn-outline-secondary" %>
<% end %>
