<!-- Form comment start -->
<%= form_with(model: @comment, local: true) do |f| %>
<!-- Form comment end -->

  <!-- Label and input for furniture_id start -->
  <div class="form-group">
    <%= f.label :furniture_id %>

    <!-- Input for furniture_id start -->
    <%= f.text_field :furniture_id, class: "form-control" %>
    <!-- Input for furniture_id end -->
  </div>
  <!-- Label and input for furniture_id end -->

  <!-- Label and input for comment start -->
  <div class="form-group">
    <%= f.label :comment %>

    <!-- Input for comment start -->
    <%= f.text_field :comment, class: "form-control" %>
    <!-- Input for comment end -->
  </div>
  <!-- Label and input for comment end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
