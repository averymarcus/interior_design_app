<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rooms

    <a data-toggle="collapse" href="#home_rooms_new_form">
      Add room
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @home.rooms.each do |room| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to room, room %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to room, method: :delete, data: { confirm: "Do you really want to delete this room" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="home_rooms_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "homes/home_rooms_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
