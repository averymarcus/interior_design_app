<% was_validated = furniture.errors.any? %>

<%= form_with(model: furniture, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for room_id start -->
  <div class="form-group">
    <% room_class = "form-control" %>
    <% room_was_invalid = furniture.errors.include?(:room) %>

    <% if was_validated %>
      <% if room_was_invalid %>
        <% room_class << " is-invalid" %>
      <% else %>
        <% room_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :room_id %>
    <!-- Input for room_id start -->
    <%= f.number_field :room_id, class: room_class, placeholder: "Enter room" %>
    <!-- Input for room_id end -->
    <% if room_was_invalid %>
      <% furniture.errors.full_messages_for(:room).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for room_id end -->
  <!-- Label and input for image start -->
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = furniture.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
    <% if image_was_invalid %>
      <% furniture.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for image end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
